<%= form_for @cr do |f| %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="connectionRequest">
      <%= title %>
    </h4>
  </div>

  <div class="modal-body">
    <%= f.hidden_field :author_id %>

    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :countries %>
      <%= f.text_field :countries, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :activity_sector %>
      <%= f.text_field :activity_sector, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", required: true, rows: 5 %>
    </div>

  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    <%= f.submit submit_label, class: "btn btn-primary" %>
  </div>

<% end %>
