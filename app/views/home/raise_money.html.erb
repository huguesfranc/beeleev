          <%= link_to "TO COMMUNITY", network_path, class: "btn btn-orange18-orange" %>
        <% elsif user_signed_in? %>
        <% else %>
          <%= link_to "JOIN THE COMMUNITY", '#', class: "btn btn-orange18-orange", data: { toggle: :modal, target: '#professional-status-selector-modal' } %>
