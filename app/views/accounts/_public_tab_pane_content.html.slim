.row
  .col-md-4
    .form-group
        = f.label :company_logo
        .row
          .col-md-3
            = image_tag f.object.company_logo.url(:panel)
          .col-md-9
            .input-group
              span.input-group-addon
                span.glyphicon.glyphicon-picture
              = f.file_field :company_logo, class: "form-control"
    .form-group
      = f.label :position
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-home
        = f.text_field :position, class: "form-control"
    .form-group
      = f.label :year_of_creation, "Year of Creation"
      = f.select :year_of_creation, (1920..Date.today.year).to_a.reverse,
        {prompt: "Select Year of creation"}, class: "form-control"
  
  .col-md-4
    .form-group
      = f.label :company
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-home
        = f.text_field :company, class: "form-control"
    .form-group
      = f.label :website
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-home
        = f.text_field :website, class: "form-control"
    .form-group
      = f.label :business_sectors, "Business Sectors"
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-home
        = f.select :business_sectors,
            User::BUSINESS_SECTORS,
            {prompt: "Select your business sectors"},
            multiple: true,
            class: "form-control"
  
  .col-md-4
    .form-group
      = f.label :company_twitter_account, "Company Twitter Account"
      .input-group
        span.input-group-addon
          i.fa.fa-twitter
        = f.text_field :company_twitter_account, class: "form-control"
    .form-group
      = f.label :company_facebook_account, "Company Facebook Account"
      .input-group
        span.input-group-addon
          i.fa.fa-facebook
        = f.text_field :company_facebook_account, class: "form-control"
    .form-group
      = f.label :company_linkedin_account, "Company LinkedIn Account"
      .input-group
        span.input-group-addon
          i.fa.fa-linkedin
        = f.text_field :company_linkedin_account, class: "form-control"            

.form-group
  = f.label :company_description, "About your Company"
  = f.text_area :company_description, class: "form-control", rows: 3    
