.row
  .col-md-4
    .form-group
      = f.label :avatar
      .row
        .col-md-3
          = image_tag f.object.avatar.url(:panel)
        .col-md-9
          .input-group
            span.input-group-addon
              span.glyphicon.glyphicon-picture
            = f.file_field :avatar, class: "form-control"
    .form-group
      = f.label :civility
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-user
        = f.select :civility, %w(Mr. Mrs. Ms. Dr.),
            {prompt: "Select title"}, class: "form-control"
    .form-group
      = f.label :first_name, "First Name"
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-user
        = f.text_field :first_name, class: "form-control"
    .form-group
      = f.label :last_name, "Last Name"
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-user
        = f.text_field :last_name, class: "form-control"
  
  .col-md-4
    .form-group
      = f.label :profil, "Profile"
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-user
        = f.select :profil, %w(Entrepreneur Expert Company),
            {prompt: "Select profile"}, class: "form-control"            
    .form-group
      = f.label :country
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-globe
        = f.country_select :country, nil, {prompt: "Select a country"},
            class: "form-control"
    .form-group
      = f.label :city
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-globe
        = f.text_field :city, class: "form-control", placeholder: 'Select a city'
    .form-group
      = f.label :nationalite
      .input-group
        span.input-group-addon
          span.glyphicon.glyphicon-globe
        = f.text_field :nationalite, class: "form-control"
  .col-md-4
    .form-group
      = f.label :twitter_account, "Twitter Account"
      .input-group
        span.input-group-addon
          i.fa.fa-twitter
        = f.text_field :twitter_account, class: "form-control"
    .form-group
      = f.label :facebook_username, "Facebook Account"
      .input-group
        span.input-group-addon
          i.fa.fa-facebook
        = f.text_field :facebook_username, class: "form-control"
    .form-group
      = f.label :provider_public_profile_url, "LinkedIn URL"
      .input-group
        span.input-group-addon
          i.fa.fa-linkedin
        = f.text_field :provider_public_profile_url, class: "form-control"

.form-group
  = f.label :description, "About You"
  = f.text_area :description, class: "form-control", rows: 3

