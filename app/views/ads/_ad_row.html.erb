<div class="col-xs-12">
  <div class="news-form">

    <div class="col-xs-12">
      <div class="overtitle-date">
        <div class="lign-center">
        </div>
        <div class="title-wrapper">
          <h3>
            <%= ad.created_at.strftime("%d-%m-%Y") %>
          </h3>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-3 img_side">
      <!-- update image tag with real image and use cl_image_tag -->
      <%= image_tag "foo.png",
                       fetch_format: :auto,
                       width: 555,
                       crop: :fill,
                       quality: 80,
                       class: 'img-responsive' %>
    </div>

    <div class="col-xs-12 col-sm-8 col-md-9 text-side">
      <h3>
        <%= "[#{ad.ad_type}]: #{ad.title}" %>
      </h3>
      <h3 class="subtitle">
        <%= link_to ad.ad_link, ad.ad_link, target: "_blank" %>
      </h3>
      <p>
        <%= ad.ad_content %>
      </p>
    </div>

  </div>
</div>
