$red: #CA4D36;
$dark-grey: #4A4A4A;
$linkedin-blue: #428bca;
$email-blue: #5bc0de;

.red { color: $red; }
.white { color: white !important; }
.dark-grey { color: $dark-grey; }

.fw-700 { font-weight: 700; }
.fw-900 { font-weight: 900; }

.ta-center { text-align: center; }

body {
  color: $dark-grey;
  background-color: white;
  font-family: "lato";
  margin: 0;
}

.adp__header {
  background-image: url("<%= Cloudinary::Utils.cloudinary_url 'adp-cover', fetch_format: :auto, quality: 80, height: 800, crop: :fill %>");
  background-position-x: center;
  background-position-y: top;
  background-repeat: no-repeat;
  background-size: cover;
  height: 400px;
  display: flex;
  justify-content: center;
  align-items: center;
}

main {
  padding: 20px 70px;
}

h1 {
  text-transform: uppercase;
  font-size: 1.8em;
  margin-top: 0;
  margin-bottom: 0.2em;
}

h2 {
  text-transform: uppercase;
  font-size: 1.3em;
  margin-top: 0;
  margin-bottom: 0;
}

.adp--intro {
  text-align: center;
  line-height: 1.5em;
  margin: 40px 0;
  padding: 0 30px;
}

.adp__list {
  line-height: 2em;
  font-size: 0.8em;
  margin-bottom: 25px;
  padding-left: 20px;
}

.adp__code {
  border: 1px solid $red;
  border-radius: 5px;
  color: $red;
  text-transform: uppercase;
  width: 100px;
  height: 20px;
  padding: 10px 20px;
  margin: 0 auto;
  line-height: 1em;
}

.adp__logos {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 40px;
}

.adp__footer {
  background-color: $red;
  padding: 20px 0;
  color: white;
  a {
    text-decoration: none;
  }
}

.adp__footer__title {
  font-size: 1.5em;
}

.adp__signup-buttons {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 90px;
  margin: 20px 0;
}

.adp__btn {
  color: white !important;
  line-height: 1em;
  margin: 0 auto;
  width: 250px;
  padding: 10px;
}

.adp__btn--linkedin {
  background-color: $linkedin-blue;
  display: flex;
  justify-content: center;
}

.adp__btn--email {
  background-color: $email-blue;
}

.adp__footer_signin {
  font-size: 0.8em;
}

@media (max-width: 767px) {
  .adp__header {
    height: 200px;
    background-image: url("<%= Cloudinary::Utils.cloudinary_url 'adp-cover', fetch_format: :auto, quality: 80, height: 400, crop: :fill %>");
  }

  main { padding: 20px 25px; }
  h1 { font-size: 1.5em; }
  h2 { font-size: 1em; }
  .adp--how { font-size: 1em; }

  .adp--intro {
    margin: 30px 0;
    padding: 0;
    font-size: 0.9em;
  }

  .adp__footer__title { font-size: 1.2em; }
}
