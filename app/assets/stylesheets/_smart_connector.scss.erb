$orange-pink: #E42739;

#smart-connector {

  #main-row {
    background-repeat: no-repeat;
  }

  .title, .step-title {
    font-size: 1.5em;
    color: $orange-pink;
    letter-spacing: 4px;
  }

  .step-wrapper {

    .step-title {
      text-align: center;
      margin-top: 50px;
    }

    .step-desc {
      text-align: center;
    }
  }
}

@media (min-width: $screen-md-min) {
  #smart-connector {
    .step-wrapper {
      padding-left: 75px;
      background: url('<%= Cloudinary::Utils.cloudinary_url "smart-connector/red-arrow", width: 21, height: 17, crop: :fill %>') no-repeat 12% 7%;

      .step-title {
        text-align: left;
      }

      .step-desc {
        text-align: left;
      }
    }
  }
}

@media (min-width: 992px) and (max-width: 1111px) {
  #main-row {
    background-position: 29% 56%, 64% 56%;
